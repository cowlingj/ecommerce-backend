{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "*.graphql": [ "@types/graphql" ],
      "*.gql": [ "@types/graphql" ],
      "~/*": ["./*"],
      "~test/*": ["../test/*"]
    },
    "typeRoots" : [
      "./node_modules/@types",
      "./@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
