{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "typeRoots" : [
            "./node_modules/@types",
            "./@types"
        ],
        "paths": {
            "@keystonejs/keystone": [
                "@types/keystonejs__keystone",
                "node_modules/@types/keystonejs__keystone"
            ],
            "@keystonejs/logger": [
              "@types/keystonejs__logger",
              "node_modules/@types/keystonejs__logger"
            ],
            "@keystonejs/adapter-mongoose": [
                "@types/keystonejs__adapter-mongoose",
                "node_modules/@types/keystonejs__adapter-mongoose"
            ]
        }
    }
}
