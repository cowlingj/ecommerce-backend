{
  "rootDir": "..",
  "roots": ["<rootDir>/src"],
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.ts$": "babel-jest",
    "^.+\\.(gql)|(graphql)$": "@jagi/jest-transform-graphql"
  },
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/(?!@cowlingj/products-api)"
  ],
  "testRegex": "(?:\\.|\\/)integration\\.ts$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
